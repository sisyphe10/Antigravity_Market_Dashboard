# 텔레그램 봇 토큰 (BotFather에게서 발급)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# 알림을 받을 텔레그램 채팅 ID (사용자 ID 또는 채널 ID)
TELEGRAM_CHAT_ID=your_chat_id_here

# 트위터 스크래핑용 계정 정보 (부계정 권장)
TWITTER_USER=your_twitter_username
TWITTER_PASS=your_twitter_password
TWITTER_EMAIL=your_twitter_email

# 감시할 트위터 계정들의 사용자명 (콤마로 구분)
# 예: elonmusk,NASA,BillGates
TARGET_ACCOUNTS=target_account1,target_account2
